{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npm run dependencies && npm run migrate:latest && nest start --watch",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run migrate:latest && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "dependencies": "docker-compose up -d",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:make": "knex migrate:make --knexfile ./src/infrastructure/database/knexfile.ts -x ts",
    "migrate:latest": "knex migrate:latest --knexfile ./src/infrastructure/database/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/infrastructure/database/knexfile.ts",
    "migrate:status": "knex migrate:status --knexfile ./src/infrastructure/database/knexfile.ts",
    "seed:make": "knex seed:make --knexfile ./src/infrastructure/database/knexfile.ts -x ts",
    "seed:run": "knex seed:run --knexfile ./src/infrastructure/database/knexfile.ts"
  },
  "dependencies": {
    "@casl/ability": "^6.7.5",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/session": "^11.1.1",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/platform-fastify": "^11.1.11",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@scalar/nestjs-api-reference": "^1.0.13",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "cache-manager": "^7.2.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "joi": "^18.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "mustache": "^4.2.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-case-convert": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.11",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.51.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
